[alias]
    st = status
    co = checkout
    br = branch
    ci = commit
    lg1 = log --graph --abbrev-commit --decorate --date=relative --format=format:'%C(bold blue)%h%C(reset) - %C(bold green)(%ar)%C(reset) %C(white)%s%C(reset) %C(dim white)- %an%C(reset)%C(bold yellow)%d%C(reset)' --all
    lg2 = log --graph --abbrev-commit --decorate --format=format:'%C(bold blue)%h%C(reset) - %C(bold cyan)%aD%C(reset) %C(bold green)(%ar)%C(reset)%C(bold yellow)%d%C(reset)%n''          %C(white)%s%C(reset) %C(dim white)- %an%C(reset)' --all
    lg = !"git lg1"
    lp = "!p() { git log --pretty=format:'%h - %an, %ar : %s' $1; }; p"    #http://stackoverflow.com/questions/3321492/git-alias-with-positional-parameters-git-foo-aaa-bbb-ccc-foo-aaa-bar-bbb
    #wdf = "remote set-url origin git://hdbgerrit.wdf.sap.corp/newdb"
    #icn = "remote set-url origin git://infra2.icnl.sap.corp/newdb"
[color]
    diff = auto
    interactive = auto
    status = auto
    branch = auto
    ui = auto
[color "diff"]
    meta = yellow
    frag = cyan
    old = red
    new = green
[color "branch"]
    current = yellow reverse
    local = yellow
    remote = green
[color "status"]
    added = yellow
    changed = green
    untracked = cyan
[core]
    editor = vi
	excludesfile = ~/.gitignore
	autocrlf = input
